
class HelloWorld
{
  public static void main(String[] args)
  {
    System.out.println("Hello World!!"); //displaying information to the console
    System.out.println("This is programming in Java!");
    System.out.println("My name is Noe Rivera Jr.");
    
    int x = 10; //using simple addition with variables in Java
    int y =15;
    int sum = x + y;
    int div = y/x;
    int product = x*y;
    int remain = y%x;
    System.out.println("The sum of 10 and 15 is: " + sum);
    System.out.println("The divisor of 15 and 10 is: " + div); 
    System.out.println("The sum of 10 and 15 is: " + product); 
    System.out.println("The sum of 10 and 15 is: " + remain); 
    
  }
}